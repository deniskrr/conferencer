              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <com.google.android.material.card.MaterialCardView android:layout_width="match_parent"
                                                       android:layout_height="wrap_content"
                                                       android:layout_marginBottom="16dp" app:cardElevation="5dp">


        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_conference"
                android:textAppearance="@android:style/TextAppearance.Material.Large" android:padding="16dp"/>
