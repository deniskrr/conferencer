<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".view.roles.author.AuthorFragment"
                                                   android:id="@+id/frameLayout">
    <TextView
            android:text="Author Panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="40sp" android:textStyle="bold"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Add new proposal"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_new_proposal"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="@+id/textView"
            android:layout_marginTop="158dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <Button
            android:text="Update proposal"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_update_proposal"
            app:layout_constraintEnd_toEndOf="@+id/button_new_proposal"
            app:layout_constraintStart_toStartOf="@+id/button_new_proposal"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/button_new_proposal"/>
</androidx.constraintlayout.widget.ConstraintLayout>